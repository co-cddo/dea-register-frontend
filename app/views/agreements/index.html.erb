<%=
  govuk_table do |table|
    table.with_caption(size: 'l', text: 'Agreements')

    table.with_head do |head|
      head.with_row do |row|
        row.with_cell(text: 'ID')
        row.with_cell(text: 'Name')
      end
    end

    table.with_body do |body|
      @agreements.each do |agreement|
        body.with_row do |row|
          row.with_cell(text: agreement.fields['ID'])
          row.with_cell(text: link_to(agreement.name, agreement, class: "govuk-link"))
        end
      end
    end
  end
%>

<%= govuk_pagination(pagy: @pagy) %>
<p class="govuk-body">
  Showing Agreements <%= @pagy.from %> to <%= @pagy.to %> of <%= @pagy.count %>.
</p>
